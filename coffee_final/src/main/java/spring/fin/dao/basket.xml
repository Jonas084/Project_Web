<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="spring.fin.model.BasketDTO"> 
	<insert id="insert_basket" parameterType="java.util.Map">
    insert into basket_inform values (basket_inform_SEQ.nextVal, #{userID},#{coffee_number})
  	</insert>
   <select id="select_basket" parameterType="String" resultType="basket">
	  select * from basket_inform where userID=#{userID}
	</select>	
	<delete id="delete_basket" parameterType="int">
    delete from basket_inform where basket_number = #{i}
  </delete>
  <select id="select_basket_coffeeN" parameterType="int" resultType="int">
	  select coffee_number from basket_inform where basket_number=#{i}
	</select>	
</mapper>






